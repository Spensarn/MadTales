<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".bankran">


    <TextView
            android:text="Bankrån"
            android:layout_width="115dp"
            android:layout_height="34dp"
            android:id="@+id/textView2"
            android:textAllCaps="true" app:fontFamily="@font/antic_slab" android:textSize="24sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/input_text_bankrån" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:visibility="invisible"
            android:textColor="@color/colorPrimaryDark"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/desc_text_bankrån"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.441"
            android:textSize="18sp" app:fontFamily="@font/antic_slab"/>
    <Button
            android:text="Spela"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:id="@+id/spela_button_bankrån"
            android:background="@drawable/round_button_corners" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="344dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
            android:textColor="@color/cardview_dark_background" android:textSize="14sp"/>
    <ImageButton
            android:layout_width="33dp"
            android:layout_height="35dp" app:srcCompat="@drawable/ic_keyboard_arrow_left_orange_24dp"
            android:id="@+id/back_button_bankrån"
            android:background="@android:color/transparent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.021"/>
    <ImageButton
            android:layout_width="63dp"
            android:layout_height="49dp" app:srcCompat="@drawable/ic_done_black_24dp"
            android:id="@+id/confirm_button_bankrån"
            android:background="@android:color/transparent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="368dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.92"
            android:visibility="invisible"/>
    <TextView
            android:layout_width="365dp"
            android:layout_height="594dp"
            android:id="@+id/text_story_bankrån" android:textSize="16sp"
            android:layout_marginBottom="84dp"
            android:lineSpacingExtra="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:textColor="@android:color/darker_gray"
            app:fontFamily="@font/antic_slab"/>
    <TextView
            android:layout_width="81dp"
            android:layout_height="41dp"
            android:id="@+id/antal_ord_bankrån" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="484dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="24sp" app:fontFamily="@font/antic_slab"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.07"/>
    <ImageButton
            android:layout_width="39dp"
            android:background="@android:color/transparent"
            android:layout_height="36dp"
            app:srcCompat="@drawable/ic_thumb_up_black_24dp"
            android:id="@+id/like_button"
            android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="108dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="108dp" android:visibility="invisible"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_thumb_down_black_24dp"
            android:id="@+id/dislike_button"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="120dp"
            android:layout_marginRight="120dp"
            android:layout_marginBottom="48dp" app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="invisible"/>
    <TextView
            android:layout_width="45dp"
            android:layout_height="16dp"
            android:id="@+id/procent_like"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="224dp" android:layout_marginStart="224dp" android:layout_marginBottom="164dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/procent_dislike"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="224dp" android:layout_marginStart="224dp" android:layout_marginBottom="112dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_thumb_up_black_24dp"
            android:id="@+id/like_image" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.451"
            android:layout_marginBottom="156dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_thumb_down_black_24dp"
            android:id="@+id/dislike_image" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.451"
            android:layout_marginBottom="100dp" app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>