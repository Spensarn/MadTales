<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presskonferens">

    <TextView
            android:text="Presskonferens"
            android:layout_width="206dp"
            android:layout_height="34dp"
            android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.011"
            android:textAllCaps="true" app:fontFamily="@font/antic_slab" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.497"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/input_text_presskonferns" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:visibility="invisible"
            android:textColor="@color/colorPrimaryDark"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/desc_text_presskonferns"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.441"
            android:textSize="18sp" app:fontFamily="@font/antic_slab"/>
    <Button
            android:text="Spela"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:id="@+id/spela_button_presskonferns"
            android:background="@drawable/round_button_corners" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="340dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
            android:textColor="@color/cardview_dark_background" android:textSize="14sp"/>
    <ImageButton
            android:layout_width="33dp"
            android:layout_height="35dp" app:srcCompat="@drawable/ic_keyboard_arrow_left_orange_24dp"
            android:id="@+id/back_button_presskonferns"
            android:background="@android:color/transparent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.021"/>
    <ImageButton
            android:layout_width="63dp"
            android:layout_height="49dp" app:srcCompat="@drawable/ic_done_black_24dp"
            android:id="@+id/confirm_button_presskonferns"
            android:background="@android:color/transparent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="368dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.92"
            android:visibility="invisible"/>
    <TextView
            android:layout_width="365dp"
            android:layout_height="594dp"
            android:id="@+id/text_story_presskonferns" android:textSize="16sp"
            android:layout_marginBottom="84dp"
            android:lineSpacingExtra="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:textColor="@android:color/darker_gray"
            app:fontFamily="@font/antic_slab"/>
    <TextView
            android:text="Använd ovanliga och kreativa ord för att få en roligare och mer underhållande text"
            android:layout_width="284dp"
            android:layout_height="43dp"
            android:id="@+id/tips_text_presskonferens" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="224dp"
            app:layout_constraintTop_toTopOf="parent" app:fontFamily="@font/antic_slab" android:textAllCaps="false"
            app:layout_constraintHorizontal_bias="0.495"/>

    <TextView
            android:text="Tips"
            android:layout_width="41dp"
            android:layout_height="23dp"
            android:id="@+id/tips_title_presskonferens" android:textAllCaps="false"
            android:textStyle="bold" android:textSize="18sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="192dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/colorAccent"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_arrow_forward_black_24dp"
            android:id="@+id/continue_button_presskonferens"
            android:background="@android:color/transparent"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.978"/>
    <TextView
            android:text="Textlängd: Mellan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textlängd_presskonferens" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.698" android:textSize="20sp" app:fontFamily="@font/antic_slab"/>
</android.support.constraint.ConstraintLayout>