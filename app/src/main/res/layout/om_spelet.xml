<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="10dp"
              android:background="@color/cardview_dark_background">

    <TextView
            android:text="Om MadTales"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="20sp"
            app:fontFamily="@font/andika" android:textColor="#2196F3"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_margin="10sp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_info_black_24dp"
            android:id="@+id/imageView2"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="MadTales är ett spel för alla, är du lite kreativ och har ett gott sinne för humor kan du eller dom du spelar med få sig ett gott skratt."
              android:textSize="18sp"
              app:fontFamily="@font/andika"
              android:layout_margin="5sp" android:textColor="#2196F3"/>

    <ImageButton android:layout_width="35dp"
                 android:layout_height="35dp"
                 android:layout_marginTop="18dp"
                 android:padding="5dp"
                 android:background="@drawable/ic_keyboard_arrow_left_orange_24dp"
                 android:id="@+id/back_card_2"/>

</LinearLayout>